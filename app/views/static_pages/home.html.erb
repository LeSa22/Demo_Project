<% if logged_in? %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="micropost_form">
      <%= render 'shared/entry_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Entry Feed</h3>
    <%= render 'shared/feed' %>
  </div>
</div>
<% else %>
<div class="page-heading">
  <h1>Welcome to Demo Blog</h1>
  <hr class="medium"></hr>
  <p>
    This is the home page for the Blog demo application.
  </p>
  <div class="button">
   <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
 </div>
</div>
<%= render 'entries/show' %>
<% end %>
